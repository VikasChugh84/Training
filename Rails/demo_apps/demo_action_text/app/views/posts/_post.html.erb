<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= post.description %>
  </p>

  <p>
    <strong>Avatar:</strong>
    <% if !post.avatar.blob.nil? %>
      <%= image_tag post.avatar.variant(resize_to_fit: [200,200]) %>
    <% end %>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>


</div>

<div class="row" style="padding:10px;">
<% @categories.each do |cat| %>
  <div class="column">
  <% if !cat.pictures.blank? %>
    <%= image_tag("#{cat.pictures.first.image_link}", alt: 'banner', class: 'img_cat') %>
  <% end %>
  <div>
    <strong><%= cat.name %></strong>
  </div>
  </div>
<% end %>
</div>

<div id="add_category">
  <%= link_to "Add New Category", new_category_path, remote: true, id: "new_category" %><br><br>
</div>

